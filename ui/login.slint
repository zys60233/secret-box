import { VerticalBox, Button } from "std-widgets.slint";

component LoginInput inherits Rectangle {
    width: 200px;
    height: 40px;
    background: white;
    border-radius: 10px;
    clip: true;

    TextInput {
        width: 180px;
        height: 30px;
        x: 20px;
        y: 8px;
        z: 20;

        color: black;
        font-size: 20px; 
        wrap: no-wrap;
    } 
}

component LoginLogo inherits Rectangle {
    width: 200px;
    height: 100px;

    Image {
        width: 100px;
        height: 100px;
        source: @image-url("icons/tile_logo.png");
    }
}

//登录窗口
export component LoginWindowContent inherits VerticalBox {
    width: 100%;
    height: 100%;
    visible: true;

    padding-left: 50px;
    alignment: center;
    spacing: 40px;

    callback loginBtnClicked();

    LoginLogo {}

    LoginInput {}

    Button {
        width: 200px;
        height: 40px;
        text: "登录";
        primary: true;
        clicked => {
            debug("登录");
            root.visible = false;
            loginBtnClicked();
        }
    }
}